{
  "id": "com.arjankranenburg.virtual",
  "version": "0.7.3",
  "compatibility": "1.x >=1.5.0",
  "sdk": 2,
  "description": "Virtual Devices to trigger your flows from the GUI.",
  "name": {
    "en": "Virtual Devices",
    "nl": "Virtuele Apparaten"
  },
  "tags": {
    "en": [
      "virtual device"
    ],
    "nl": [
      "Virtuele Apparaten"
    ]
  },
  "author": {
    "name": "Arjan Kranenburg",
    "email": "arjan.kranenburg@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Arjan Kranenburg",
        "email": "arjan.kranenburg@gmail.com"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "email": "arjan.kranenburg@gmail.com",
        "currency": "EUR"
      }
    }
  },
  "bugs": {
        "url": "https://github.com/ArjanKranenburg/virtual-devices/issues"
  },
  "athomForumDiscussionId": 3065,
  "images": {
    "large": "./assets/images/large.png",
    "small": "./assets/images/small.png"
  },
  "category": "tools",
  "capabilities": {
    "multi_state": {
      "type": "string",
      "title": {
        "en": "Multi-mode state",
        "nl": "Multimode status"
      },
      "getable": true,
      "setable": true
    },
    "previous_state": {
      "type": "string",
      "title": {
        "en": "Previous Multi-mode state",
        "nl": "Vorige Multimode status"
      },
      "getable": true,
      "setable": false
    }
  },
  "flow": {
    "triggers": [
      {
        "id": "device_changed",
        "title": {
          "en": "A virtual device changed",
          "nl": "Een virtueel apparaat is veranderd"
        },
        "tokens": [
          {
            "name": "value",
            "title": {
              "en": "value",
              "nl": "waarde"
            },
            "example": {
              "en": "true",
              "nl": "true"
            }
          },
          {
            "name": "variable",
            "title": {
              "en": "variable",
              "nl": "variabele"
            },
            "example": {
              "en": "onoff",
              "nl": "aanuit"
            }
          },
          {
            "name": "device",
            "title": {
              "en": "device",
              "nl": "apparaat"
            },
            "example": {
              "en": "Virtual Lamp",
              "nl": "Virtuele Lamp"
            }
          }
        ]
      },
      {
        "id": "press",
        "title": {
          "en": "Pressed / changed",
          "nl": "Ingedrukt / veranderd"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=virtual_switch"
          }
        ]
      },
      {
        "id": "mode_on",
        "title": {
          "en": "Mode is on",
          "nl": "Modus wordt aangezet"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      },
      {
        "id": "mode_off",
        "title": {
          "en": "Mode is off",
          "nl": "Modus wordt uitgezet"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      },
      {
        "id": "mode_changed",
        "title": {
          "en": "Mode Changed",
          "nl": "Modus Veranderd"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      },
      {
        "id": "multi_changed",
        "title": {
          "en": "Multi Mode Changed",
          "nl": "Multi-Modus Veranderd"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=multi"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "mode",
        "title": {
          "en": "Mode !{{is|isn't}} turned on",
          "nl": "Modus !{{is|is niet}} aangezet"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      },
      {
        "id": "multi_mode_is",
        "title": {
          "en": "Multi-mode !{{is|is not}} exactly",
          "nl": "Multi-modus !{{is|is niet}} exact"
        },
        "args": [
          {
            "name": "state",
            "type": "text",
            "placeholder": {
              "en": "State",
              "nl": "Status"
            }
          },
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=multi"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "set_sensor_value",
        "title": {
          "en": "Set a virtual sensor value",
          "nl": "Zet de waarde van een virtuele sensor"
        },
        "args": [
          {
            "name": "sensor",
            "type": "text",
            "placeholder": {
              "en": "Sensor",
              "nl": "Sensor"
            }
          },
          {
            "name": "value",
            "type": "text",
            "placeholder": {
              "en": "Value",
              "nl": "Waarde"
            }
          },
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=virtual_switch"
          }
        ]
      },
      {
        "id": "mode_action_on",
        "title": {
          "en": "Turn mode on",
          "nl": "Zet modus aan"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      },
      {
        "id": "mode_action_off",
        "title": {
          "en": "Turn mode off",
          "nl": "Zet modus uit"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      },
      {
        "id": "mode_state_on",
        "title": {
          "en": "Set mode on, no trigger",
          "nl": "Zet modus aan zonder trigger"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      },
      {
        "id": "mode_state_off",
        "title": {
          "en": "Set mode off, no trigger",
          "nl": "Zet modus uit zonder trigger"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      },
      {
        "id": "multi_set_state",
        "title": {
          "en": "Set multi-mode",
          "nl": "Zet multi modus"
        },
        "args": [
          {
            "name": "multi_state",
            "type": "text",
            "placeholder": {
              "en": "New state",
              "nl": "Nieuwe status"
            }
          },
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=multi"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "virtual_switch",
      "name": {
        "en": "Device",
        "nl": "Apparaat"
      },
      "images": {
        "large": "drivers/virtual_switch/assets/images/large.png",
        "small": "drivers/virtual_switch/assets/images/small.png"
      },
      "class": "other",
      "capabilities": [
        "onoff"
      ],
      "pair": [{
          "id": "class"
        },
        {
          "id": "name",
          "navigation": {
            "next": "icon",
            "prev": "class"
          }
        },
        {
          "id": "icon"
        },
        {
          "id": "capabilities",
          "navigation": {
            "next": "done",
            "prev": "icon"
          }
        },
        {
          "id": "done",
          "navigation": {
            "prev": "icon"
          }
        }
      ]
    },
    {
      "id": "mode",
      "name": {
        "en": "Mode",
        "nl": "Modus"
      },
      "images": {
        "large": "drivers/mode/assets/images/large.png",
        "small": "drivers/mode/assets/images/small.png"
      },
      "class": "other",
      "capabilities": [
        "onoff"
      ],
      "pair": [
        {
          "id": "name",
          "navigation": {
            "next": "icon"
          }
        },
        {
          "id": "icon"
        },
        {
          "id": "done",
          "navigation": {
            "prev": "icon"
          }
        }
      ],
      "mobile": {
        "components": [
          {
            "id": "icon",
            "capabilities": [
              "onoff"
            ]
          },
          {
            "id": "toggle",
            "capabilities": [
              "onoff"
            ]
          }
        ]
      }
    },
    {
      "id": "multi",
      "name": {
        "en": "Multi-Mode",
        "nl": "Multi Modus"
      },
      "images": {
        "large": "drivers/multi/assets/images/large.png",
        "small": "drivers/multi/assets/images/small.png"
      },
      "class": "other",
      "capabilities": [
        "onoff",
        "multi_state"
      ],
      "capabilitiesOptions": {
        "onoff": {
          "greyout": false
        }
      },
      "pair": [
        {
          "id": "name",
          "navigation": {
            "next": "icon"
          }
        },
        {
          "id": "icon",
          "navigation": {
            "prev": "name"
          }
        },
        {
          "id": "modes",
          "navigation": {
            "prev": "icon",
            "next": "done"
          }
        },
        {
          "id": "mode_name",
          "navigation": {
            "prev": "modes",
            "next": "mode_icon"
          }
        },
        {
          "id": "mode_icon",
          "navigation": {
            "prev": "mode_name",
            "next": "modes"
          }
        },
        {
          "id": "done",
          "navigation": {
            "prev": "modes"
          }
        }
      ],
      "mobile": {
        "components": [
          {
            "id": "icon",
            "capabilities": [
              "onoff"
            ]
          },
          {
            "id": "toggle",
            "capabilities": [
              "onoff"
            ]
          }
        ]
      }
    }
  ]
}
